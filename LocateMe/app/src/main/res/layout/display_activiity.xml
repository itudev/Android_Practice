<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.letsdecode.locateme.DisplayActivity"
    android:background="#e8e4f6">

    <TextView
        android:id="@+id/savedSecretCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:fontFamily="serif"
        android:textColor="#Cf1E2D63"
        android:textSize="20dp" />

    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/savedSecretCode"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="Edit"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/my_button">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit"
        android:layout_marginTop="90dp"
        android:textColor="#Cf1E2D63"
        android:text="Share the saved code with your friends and family members so they can track your current location. On recieving the sms containing this code, app would automatically sends your current location."/>

</RelativeLayout>
