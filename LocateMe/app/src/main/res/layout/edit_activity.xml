<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.letsdecode.locateme.EditActivity"
    android:background="#e8e4f6">


    <TextView
        android:id="@+id/enterSecretCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="serif"
        android:text="Set your secret code"
        android:textColor="#Cf1E2D63"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/secretCodeEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enterSecretCode"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="enter 4 digits code"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="#000000"
        android:textColorHint="#771E2D63"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/secretCodeEdit"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="Save"
        android:textSize="20dp"
        android:background="@drawable/my_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:layout_marginTop="80dp"
        android:textColor="#Cf1E2D63"
        android:text="Save this code and share it with your friends and family members so they can track your current location. On recieving the sms containing this code, this app would automatically sends your current location."/>


</RelativeLayout>
